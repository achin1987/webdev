<% include ./partials/header %>
    <div class="row">
        <div class="col-md-12">
            <form class="form-signin" action="/login" method="POST">
                <h1 class="h3 mb-3 font-weight-normal">Login</h1>
                <label for="inputUsername" class="sr-only">Username</label>
                <input type="text" placeholder="username" name="username" id="inputUsername" class="form-control" required autofocus>
                <label for="inputPassword" class="sr-only">Password</label>
                <input type="password" placeholder="password" name="password" id="inputPassword" class="form-control" required>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Sign in</button>
            </form>
            <div class="form-signin">
                <a href="/campgrounds">Go back</a>
            </div>
        </div>
    </div>
<% include ./partials/footer %>
